<%= turbo_stream_from [decomp, "stages"] %>
<%= turbo_stream_from [decomp, "participations"] %>

<%= turbo_frame_tag @decomp do %>
  <%= link_to 'â¬… Decay something else', decomps_path, class: "btn-rose mr-4" %>
  <div
    class="btn-emerald cursor-pointer mr-4"
    data-controller="clipboard"
    data-action="click->clipboard#copy"
    data-clipboard-contents-to-copy-value="<%= invite_url(@decomp) %>">
    ðŸ”— Invite Others
  </div>
  <%= link_to 'ðŸŒ± Edit Decomp', edit_decomp_path(@decomp), class: "btn-sky" %>


        <%= story_point %>
      </div>
    <% end %>
  </div>

  <hr class="my-4">

  <%= turbo_frame_tag "stages" do %>
    <%= render decomp.stages %>
  <% end %>

  <%= turbo_frame_tag "new_stage" do %>
    <%= link_to "Decompose more", new_decomp_stage_path(decomp), class: "mt-4 btn-sky" %>
  <% end %>

  <%= turbo_frame_tag "stages" %>
<% end %>
